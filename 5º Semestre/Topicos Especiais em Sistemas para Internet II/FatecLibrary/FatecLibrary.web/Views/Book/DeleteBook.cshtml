@model FatecLibrary.Web.Models.Entities.BookViewModel


<h3>Apagar Livro</h3>
<h4>Tem certeza que deseja apagar o livro ?</h4>
<div>

    <div class="container">
        <dl class="col">
                <div class="row">
                <p class="col-sm-2 bg-black d-flex align-items-center justify-content-center text-white rounded">
                        Titulo
                    </p>
                <p class="col-sm-2 bg-light bg-gradient shadow d-flex align-items-center justify-content-center text-black rounded">
                        @Html.DisplayFor(model => model.Title)
                    </p>
                </div>
            <div class="row">
                <p class="col-sm-2 bg-black d-flex align-items-center justify-content-center text-white">
                    Editora
                </p>
                <p class="col-sm-2 bg-light bg-gradient shadow d-flex align-items-center justify-content-center text-black">
                    @Html.DisplayFor(model => model.PublishingName)
                </p>
            </div>
            
            

            <form asp-action="DeleteBook">
                <input type="hidden" asp-for="Id" />
                <div class="form-group" style="padding-top: 10px">
                    <button type="submit" value="delete" class="btn btn-danger">
                        <span class="fas fa-trash-alt"></span>
                        </button>
                    <a asp-action="Index" class="btn btn-primary bg-gradient">Voltar</a>
                </div>
            </form>
        </dl>
    </div>
</div>
